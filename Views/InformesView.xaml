<UserControl x:Class="AppCaravana.Views.InformesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="#F5F6FA">

    <UserControl.Resources>
        <ResourceDictionary Source="../Resources/Styles.xaml"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Background="White"
                Padding="25,20"
                BorderThickness="0,0,0,1"
                BorderBrush="#E0E0E0">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="ðŸ“Š Informes y Reportes"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Visualiza grÃ¡ficos de anÃ¡lisis de ventas, caravanas y clientes"
                           FontSize="13"
                           Foreground="#7F8C8D"/>
            </StackPanel>
        </Border>

        <!-- Barra de herramientas -->
        <Border Grid.Row="1"
                Background="White"
                Padding="25,15"
                BorderThickness="0,0,0,1"
                BorderBrush="#E0E0E0">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
                <Button Content="ðŸ”„ Actualizar Reportes"
                        Width="200"
                        Height="45"
                        FontSize="14"
                        Click="BtnGenerarReportes_Click"
                        x:Name="btnGenerarReportes"
                        Style="{StaticResource PrimaryButtonStyle}"/>
                <TextBlock x:Name="txtEstado"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"
                           FontSize="13"
                           Foreground="#7F8C8D"/>
            </StackPanel>
        </Border>

        <!-- Contenido de reportes -->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="reportsContainer"
                        Margin="25,15">
                <Border Background="White"
                        Padding="30"
                        CornerRadius="8"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">
                    <TextBlock Text="â³ Cargando reportes..."
                               FontSize="16"
                               Foreground="#7F8C8D"
                               TextAlignment="Center"
                               Margin="0,30,0,0"/>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
