<Window x:Class="AppCaravana.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:AppCaravana.Views"
        Title="AppCaravana - Gestión de Caravanas"
        Height="720"
        Width="1100"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6FA"
        Loaded="MainWindow_Loaded">

        <Window.Resources>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
        </Window.Resources>

        <Grid>
                <!-- Estructura general: menú a la izquierda, vistas a la derecha -->
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- PANEL IZQUIERDO - SIDEBAR -->
                <Grid Grid.Column="0"
                      Background="#2C3E50">
                        <StackPanel Orientation="Vertical">
                                <!-- Header del Sidebar -->
                                <Border Background="#1A252F"
                                        Padding="20,30,20,20">
                                        <StackPanel Orientation="Vertical">
                                                <TextBlock Text="🚐"
                                                           FontSize="32"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="AppCaravana"
                                                           Foreground="White"
                                                           FontSize="22"
                                                           FontWeight="Bold"
                                                           TextAlignment="Center"
                                                           Margin="0,10,0,5"/>
                                                <TextBlock Text="Gestión de Caravanas"
                                                           Foreground="#95A5A6"
                                                           FontSize="11"
                                                           TextAlignment="Center"/>
                                        </StackPanel>
                                </Border>

                                <!-- Botones del menú -->
                                <StackPanel Orientation="Vertical"
                                            Margin="0,30,0,0">
                                        <!-- Botón Caravanas -->
                                        <Button Content="🚐 Caravanas"
                                                Margin="15,8"
                                                Height="50"
                                                Click="BtnCaravanas_Click"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                FontSize="15"
                                                Padding="10"/>

                                        <!-- Botón Clientes -->
                                        <Button Content="👥 Clientes"
                                                Margin="15,8"
                                                Height="50"
                                                Click="BtnClientes_Click"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                FontSize="15"
                                                Padding="10"/>

                                        <!-- Botón Ventas -->
                                        <Button Content="💰 Ventas"
                                                Margin="15,8"
                                                Height="50"
                                                Click="BtnVentas_Click"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                FontSize="15"
                                                Padding="10"/>

                                        <!-- Botón Informes -->
                                        <Button Content="📊 Informes"
                                                Margin="15,8"
                                                Height="50"
                                                Click="BtnInformes_Click"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                FontSize="15"
                                                Padding="10"/>

                                        <!-- Botón Escanear QR -->
                                        <Button Content="🔍 Escanear QR"
                                                Margin="15,8"
                                                Height="50"
                                                Click="BtnEscaneoQR_Click"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                FontSize="15"
                                                Padding="10"/>

                                        <Button Content="🔗 Conectar con Google"
                                                Margin="15,8"
                                                Height="44"
                                                Click="BtnConnectGoogle_Click"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                FontSize="13"
                                                Padding="8"/>

                                        <Button Content="💾 Exportar Datos"
                                                Margin="15,8"
                                                Height="50"
                                                Click="BtnExportar_Click"
                                                Style="{StaticResource SuccessButtonStyle}"
                                                FontSize="15"
                                                Padding="10"/>
                                </StackPanel>

                                <!-- Espaciador -->
                                <StackPanel VerticalAlignment="Bottom"
                                            Margin="0,0,0,20">
                                        <!-- Botón Salir -->
                                        <Button Content="🚪 Salir"
                                                Margin="15,8"
                                                Height="50"
                                                Click="BtnSalir_Click"
                                                Style="{StaticResource DangerButtonStyle}"
                                                FontSize="15"
                                                Padding="10"/>
                                </StackPanel>
                        </StackPanel>
                </Grid>

                <!-- PANEL DE CONTENIDO (VISTAS) -->
                <Grid Grid.Column="1">
                        <ContentControl x:Name="MainContent"
                                        Margin="20"/>
                </Grid>
        </Grid>
</Window>
